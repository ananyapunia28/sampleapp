<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity" android:layout_height="match_parent"  android:layout_width="match_parent"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="72.3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:src="@drawable/saynclogo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card0"
        android:layout_below="@id/logo"
        android:layout_width="380dp"
        android:layout_height="42dp"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Please turn on your  SayNc compatible device to start"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_below="@id/card0"
            android:layout_width="380dp"
            android:layout_centerHorizontal="true"
            android:layout_height="285dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Tap button to speak and automatically send"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/listen"
                    android:layout_below="@id/text1"
                    android:layout_width="183dp"
                    android:layout_height="39dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/listen_button"
                    android:text="LISTEN"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/listen"
                    android:layout_marginTop="16dp"
                    android:text="..............................................................."
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text2"
                    android:layout_marginTop="18dp"
                    android:text="Or type the text in below and tap button to send"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:textColor="#0037CF"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inlayout"
                    android:layout_width="342dp"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_below="@id/text3"
                    app:boxStrokeColor="#0037CF"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp">
                    <EditText
                        android:id="@+id/input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/send"
                    android:layout_width="229dp"
                    android:layout_height="38dp"
                    android:layout_below="@id/inlayout"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/listen_button"
                    android:text="SEND TEXT TO SayNc DEVICE"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/dropperbg"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:drawablePadding="16dp"
            android:hint="Language"
            android:padding="12dp"
            android:textColorHint="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RL"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView">
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="Brightness :"
            android:textColor="@color/white"
            android:textSize="17dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_Default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@id/text4" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RL">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="LED Duration:"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="17dp" />


            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_Default2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:valueFrom="0"
                android:valueTo="12"
                android:stepSize="2"
                android:layout_toRightOf="@id/text5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/R2">

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="Enable real-time speech:"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Switch
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true" />
            </RelativeLayout>


    </RelativeLayout>
    </ScrollView>


</LinearLayout>